{% extends 'base.html.twig' %}

{% block title %}Liste des stages selon le diplome{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    .card {
        margin-top: 10px;
    }
</style>

<div class="example-wrapper">
    <h1>Cette page affiche la liste des stages qui proposent cette formation</h1>

    {% for stageUnique in formation.stages %}
    <div class="card">
        <div class="card-header">
            {{ stageUnique.titre }}
        </div>
        <div class="card-body">
            <h5 class="card-title"></h5>
            <p class="card-text">
                {% for formation in stageUnique.formation %}
                    - {{ formation.nomCourt }}
                {% endfor %}
            </p>
            <a href="{{ path('stages', {id:stageUnique.id}) }}" class="btn btn-primary">Voir le Stage</a>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}