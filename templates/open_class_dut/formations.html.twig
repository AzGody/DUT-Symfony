{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}
<style>
  .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
  .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

  .card {
    margin-top: 10px;
  }
</style>

<div class="example-wrapper">
  <h1>Cette page affiche la liste des formations de l'IUT</h1>

  {% for formationUnique in listeFormation %}
  <div class="card">
    <div class="card-header">
      {{ formationUnique.nomLong }}
    </div>
    <div class="card-body">
      <a href="{{ path('formations_stage', {id:formationUnique.id}) }}" class="btn btn-primary">Voir les stages de cette Formation</a>
    </div>
  </div>
  {% endfor %}
{% endblock %}
